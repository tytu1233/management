<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Percentage_Picked_Fill_Field</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 ISPICKVAL( Discount_Type__c, &quot;Percentage&quot;),
 ISBLANK(TEXT(  Discount_Percentage__c  ))
)</errorConditionFormula>
    <errorDisplayField>Discount_Percentage__c</errorDisplayField>
    <errorMessage>Complete this field with a percentage value.</errorMessage>
</ValidationRule>
